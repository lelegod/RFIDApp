<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#667994"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/Final_product_code"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/final_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:inputType="textMultiLine"
                        android:maxLength="24"
                        android:padding="5dp"
                        android:text="303515a52404230081400001"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/Parts_code"
                        android:textColor="#ffffff" />

                    <EditText
                        android:id="@+id/parts_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:inputType="textMultiLine"
                        android:maxLength="24"
                        android:padding="5dp"
                        android:text="parts a"
                        android:visibility="visible" />




                </LinearLayout>
            </ScrollView>

            <FrameLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|bottom" >

                <ImageView
                    android:id="@+id/readdisp_condition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/and_ico_rfid3" >
                </ImageView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#455362" >

            <LinearLayout
                android:id="@+id/duplication_layout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" >









            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:background="#637386" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/readstart"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/and_btn_save2_u_e" />

            <ImageView
                android:id="@+id/clear"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/readstart"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/and_btn_clear_g" />

            <ImageView
                android:id="@+id/sort"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/clear"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/and_btn_sort_g" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>